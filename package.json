{
  "name": "backend-prisma-express-template",
  "version": "1.0.0",
  "description": "The best backend boilerplate using Prisma, Express and Typescript",
  "scripts": {
    "dev": "ts-node-dev --exit-child --transpile-only --ignore-watch node_modules --project tsconfig.json -r tsconfig-paths/register ./src/server.ts",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "author": "Domeniqque <domeniqque@hotmail.com>",
  "license": "MIT",
  "prisma": {
    "schema": "./src/prisma/schema.prisma",
    "seed": "ts-node -r tsconfig-paths/register ./src/prisma/seed/index.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@prisma/client": "^4.14.1",
    "@types/ms": "^0.7.31",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "prisma": "^4.14.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  }
}
